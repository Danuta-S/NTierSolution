@model NTierSolution.MVC.UI.Models.StudentsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Student List";
}

@using (Html.BeginForm("ModifyViewData", "Home", FormMethod.Post))
{

    <div class="row">
        <p>Enter details for a new student:</p>
        <div>
            <label asp-for="Name" class="col-md-2 col-form-label">Name:</label>
            <input asp-for="Name"
               placeholder="Name" required />
        </div>
        <div>
            <label asp-for="Surname" class="col-md-2 col-form-label">Surname:</label>
            <input asp-for="Surname"
               placeholder="Surname" required />
        </div>
    </div>
    <button id="SaveButtonId" type="submit" class="btn btn-success">Add</button>
}
</br>

<h2>List of the Students</h2>
@if (Model != null)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Surname</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.Students)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => student.Id)</td>
                    <td>@Html.DisplayFor(modelItem => student.Name)</td>
                    <td>@Html.DisplayFor(modelItem => student.Surname)</td>
                    <td><a class="btn btn-success" asp-action="Edit" asp-route-id="@student.Id">Update</a></td>
                    <td><a class="btn btn-outline-danger" asp-action="DeleteComponent" asp-route-id="@student.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
